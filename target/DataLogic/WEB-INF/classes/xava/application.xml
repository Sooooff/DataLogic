<?xml version="1.0" encoding="ISO-8859-1"?>

<application name="DataLogic">

    <!-- Tema visual Flatly (moderno y limpio) -->
    <skin>Flatly</skin>

    <!-- Módulos principales del sistema -->
    <module name="Empleado"/>
    <module name="Cliente"/>
    <module name="Producto"/>
    <module name="OrdenCompra"/>
    <module name="Factura"/>
    <module name="MetaVenta"/>

    <!-- Controladores globales -->
    <controller name="Index">
        <env-var name="XAVA_SEARCH_ACTION" value="CRUD.search"/>
        <env-var name="XAVA_SEARCH_LIST_ACTION" value="CRUD.search"/>
    </controller>

</application>